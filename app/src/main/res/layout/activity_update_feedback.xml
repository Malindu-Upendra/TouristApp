<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".UpdateFeedback">

    <Button
        android:id="@+id/button4"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="100dp"
        android:text="@string/update1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="235dp"
        android:layout_height="40dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="128dp"
        android:background="#D6D1D1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="@string/entered_feedbacks"
        android:textColor="#FDFEFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/button7"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="27dp"
        android:background="#CDC1C1"
        android:text="@string/option"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/searchView" />

    <Button
        android:id="@+id/button6"
        android:layout_width="94dp"
        android:layout_height="34dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="232dp"
        android:text="@string/delete2"
        android:textColor="#0B0A0A"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <EditText
        android:id="@+id/textView7"
        android:layout_width="280dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:autofillHints=""
        android:background="#FFFFFF"
        android:hint="@string/Feedbacks"
        android:textColor="#1B1919"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <View
        android:id="@+id/view"
        android:layout_width="410dp"
        android:layout_height="3dp"
        android:layout_marginTop="84dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7" />

    <Spinner
        android:id="@+id/static_spinner"
        android:layout_width="321dp"
        android:layout_height="38dp"
        android:background="#887F7F"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="89dp"
        android:layout_height="84dp"
        android:background="@drawable/icon"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="321dp"
        android:layout_height="45dp"
        android:layout_marginStart="1dp"
        android:background="#887F7F"
        android:text="@string/ceylon_trips_tramps"
        android:textAlignment="center"
        android:textColor="#2D3775"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.001" />



</androidx.constraintlayout.widget.ConstraintLayout>